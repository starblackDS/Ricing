##################################### IMPORTANT KEYS ######################################

#windows key as superkey
set $mod Mod4

font xft:OpenSans 11

###MultiMedia Keys###

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +15% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -15% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

#Monitor brightness
#bindsym XF86MonBrightnessUp     exec light -k  -A 10
#bindsym XF86MonBrightnessDown   exec light -k  -U 10

bindsym XF86MonBrightnessUp exec "xbacklight -inc 10; notify-send 'brightness up'"
bindsym XF86MonBrightnessDown exec "xbacklight -dec 10; notify-send 'brightness down'"

#Keyboard brightness
bindsym XF86KbdBrightnessUp     exec light -k -A 10

#screenshot
bindsym $mod+shift+p exec --no-startup-id i3-scrot '%Y-%m-%d-%s_screenshot_$wx$h.jpg' -e 'mv $f ~/Pictures/Screenshots/'
#bindsym Control+Print exec --no-startup-id xfce4-screenshooter
#bindsym Control+Shift+Print exec --no-startup-id gnome-screenshot -i

#toggle monitor

bindsym $mod+m exec togglemoni

